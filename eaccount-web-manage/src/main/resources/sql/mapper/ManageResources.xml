<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ucsmy.eaccount.manage.dao.ManageResourcesDao">

    <sql id="query">
        SELECT mr.ID, mr.GROUP_NAME as groupName, mr.NAME, mr.URL
        FROM manage_resources mr
    </sql>

    <insert id="save" parameterType="com.ucsmy.eaccount.manage.entity.ManageResources">
        insert into manage_resources(ID, GROUP_NAME, NAME, URL)
        values(#{id}, #{groupName}, #{name}, #{url}
        )
    </insert>

    <update id="update" parameterType="com.ucsmy.eaccount.manage.entity.ManageResources">
        update manage_resources
        set
            GROUP_NAME = #{groupName},
            NAME = #{name},
            URL = #{url}
        where
          id = #{id}
    </update>

    <delete id="delete" parameterType="String">
        delete from manage_resources
        where id = #{id}
    </delete>

    <select id="findById" parameterType="string" resultType="com.ucsmy.eaccount.manage.entity.ManageResources">
        <include refid="query"/>
        where id = #{id}
    </select>

    <select id="find" parameterType="string" resultType="com.ucsmy.eaccount.manage.entity.ManageResources">
        <include refid="query"/>
        <where>
            <if test="entity != null">
                <if test="!(entity.groupName == null || entity.groupName == '')">
                    and GROUP_NAME like concat('%', #{entity.groupName}, '%')
                </if>
                <if test="!(entity.name == null || entity.name == '')">
                    and NAME like concat('%', #{entity.name}, '%')
                </if>
            </if>
        </where>
        ORDER BY GROUP_NAME, NAME
    </select>

    <select id="findByMenuId" parameterType="string" resultType="com.ucsmy.eaccount.manage.entity.ManageResources">
        <include refid="query"/>
        JOIN manage_menu_resources mmr ON mr.id = mmr.resources_id
        WHERE mmr.menu_id = #{menuId}
        ORDER BY mr.GROUP_NAME, mr.NAME
    </select>
</mapper>